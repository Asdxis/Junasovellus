<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="#66A1D8"
            tools:context=".MainActivity" >

            <Button
                android:id="@+id/stationSchedule"
                android:onClick="k"
                android:layout_alignParentRight="true"
                android:text="@string/stationClick"
                android:backgroundTint="#439CF0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:onClick="searchClick"
                android:id="@+id/btnArrayRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#439CF0"
                android:text="@string/getButton" />
            <EditText
                android:inputType="number"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addTrain"
                android:hint="@string/addTrain"/>
            <TextView
                android:id="@+id/txtResponseTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnArrayRequest"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:background="#FFFFFF"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/txtResponse"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/txtResponseTitle"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="#FFFFFF"
                android:textSize="15sp" />
            <Button
                android:id="@+id/selectDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#439CF0"
                android:layout_marginTop="50dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="@string/setDate"
                android:onClick="setDate" />
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>